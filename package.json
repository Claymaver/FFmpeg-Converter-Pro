{
  "name": "ffmpeg-converter-pro",
  "version": "2.0.0",
  "description": "Professional FFmpeg Video Converter",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder"
  },
  "keywords": ["ffmpeg", "video", "converter", "electron"],
  "author": "Clau MacDonald",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "fluent-ffmpeg": "^2.1.2"
  },
  "build": {
    "appId": "com.ffmpegconverter.app",
    "productName": "FFmpeg Converter Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg-installer/ffmpeg",
        "to": "ffmpeg-installer",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/@ffprobe-installer/ffprobe",
        "to": "ffprobe-installer",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.video",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "AudioVideo",
      "icon": "assets/icon.png"
    }
  }
}
