{
  "name": "ffmpeg-video-converter",
  "version": "1.1.0",
  "description": "FFmpeg Video Converter with GUI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist-win": "electron-builder --win --publish never",
    "dist-mac": "electron-builder --mac --publish never",
    "dist-linux": "electron-builder --linux --publish never"
  },

"build": {
  "appId": "com.ffmpeg.videoconverter",
  "productName": "FFmpeg Video Converter",
  "publish": "never",

  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico"
  },

  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64", "x64"]
      }
    ],
    "icon": "build/icon.icns",
    "identity": null
  },

  "linux": {
    "target": [
      "AppImage"
    ],
    "maintainer": "Clay MacDonald <claymaver@proton.me>",
    "category": "Utility",
    "icon": "build/icon.png"
  },

  "directories": {
    "buildResources": "build",
    "output": "dist"
  },

  "files": [
    "**/*"
  ]
},
  "dependencies": {
    "fluent-ffmpeg": "^2.1.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}